<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="merctrans_clients_actions" model="ir.actions.act_window">
    <field name="name">Merctrans Clients List</field>
    <field name="res_model">merctrans.clients</field>
    <field name="view_mode">tree,form</field>
  </record>
  <!-- job form view -->
  <record id="client_view_form" model="ir.ui.view">
    <field name="name">Client Form</field>
    <field name="model">merctrans.clients</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="name" />
            <field name="email" />
            <field name="client_currency" />
            <!-- <field name="source_language" readonly="1"/> -->
          </group>
          <group>
            <field name="client_currency" />
          </group>
        </group>
        <notebook>
          <page string="Client Note" name="client_note">
            <field name="client_note" />
          </page>
        </notebook>

      </form>
    </field>
  </record>

  <!-- job view tree -->
  <record id="client_view_tree" model="ir.ui.view">
    <field name="name">Client Tree</field>
    <field name="model">merctrans.clients</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="email" />
        <field name="client_currency" />

      </tree>
    </field>

  </record>
  <!-- search view -->
</odoo>
